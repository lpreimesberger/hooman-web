{
    "watch":  "**/**.html",
    "reload": "**/**.html",
    "mount": [
        {
            "path":   ".",
            "target": "/"
        }
    ],
    "inject": [
        {
            "content": "before-body.html",
            "which":   "**/**.html",
            "where":   "</body>",
            "prepend": true
        }
    ]
}
